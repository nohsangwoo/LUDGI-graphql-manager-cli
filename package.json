{
  "name": "ludgi-cli",
  "version": "2.5.0",
  "main": "dist/src/scripts/cli.js",
  "type": "commonjs",
  "scripts": {
    "dev": "nodemon --exec \"node -r @swc-node/register\" src/scripts/cli.ts",
    "build": "rimraf dist && swc src -d dist --copy-files",
    "prepare": "npm run build",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "bin": {
    "ludgi-cli": "./dist/src/scripts/cli.js"
  },
  "preferGlobal": false,
  "keywords": [
    "cli",
    "graphql"
  ],
  "author": "LUDGI",
  "license": "MIT",
  "description": "CLI tool for managing GraphQL resources",
  "dependencies": {
    "@swc/cli": "^0.5.2",
    "@swc/core": "^1.10.4",
    "chalk": "^5.4.1",
    "commander": "^13.0.0",
    "console-table-printer": "^2.12.1",
    "dotenv": "^16.4.7",
    "figlet": "^1.8.0",
    "inquirer": "^12.3.0",
    "nodemon": "^3.1.9",
    "rimraf": "^6.0.1"
  },
  "devDependencies": {
    "@types/figlet": "^1.7.0",
    "@types/node": "^22.10.5",
    "typescript": "^5.7.2"
  }
}
